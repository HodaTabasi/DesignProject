<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/report_layout_shap"
        android:orientation="vertical"
        android:padding="9dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/report_layout_shap"
            android:gravity="center"
            android:text="حسام اليماني"
            android:textColor="@color/gray1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:paddingEnd="8sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/report_layout_shap"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_like"
                android:gravity="center"
                android:text="150"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:paddingEnd="8sp"
                android:textColor="@color/gray1" />

            <TextView
                android:id="@+id/tv_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/report_layout_shap"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_show"
                android:gravity="center"
                android:text="1200"
                android:textColor="@color/gray1"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:paddingEnd="8sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_specialization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/report_layout_shap"
            android:gravity="center"
            android:text="تصميم معماري"
            android:textColor="@color/gray1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:paddingEnd="8sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/tv_addProject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_weight="4"
                android:background="@drawable/title_shape"
                android:gravity="center"
                android:padding="5dp"
                android:text="أضف عمل مشابه"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/tv_fav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/report_layout_shap"
                android:padding="5dp"
                android:src="@drawable/ic_favorite" />
        </LinearLayout>

    </LinearLayout>


