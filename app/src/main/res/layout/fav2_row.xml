<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_6sdp"
        android:background="@drawable/report_layout_shap"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_4sdp"
            android:background="@drawable/report_layout_shap"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="اسم صاحب العمل"
            android:textColor="@color/textGray"
            android:textSize="@dimen/_10sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/report_layout_shap"
                android:drawableRight="@drawable/ic_like_small"
                android:gravity="center"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:text="0"
                android:textColor="@color/textGray"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/tv_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/report_layout_shap"
                android:drawableRight="@drawable/ic_show_small"
                android:gravity="center"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingTop="@dimen/_3sdp"
                android:text="0"
                android:textColor="@color/textGray"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/report_layout_shap"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="تصميم معماري"
            android:textColor="@color/textGray"
            android:textSize="@dimen/_8sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <TextView
                android:id="@+id/tv_addProject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_weight="2"
                android:background="@drawable/blue_shape"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="أضف عمل مشابه"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

            <ImageView
                android:id="@+id/tv_fav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/report_layout_shap"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_favorite_black"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>