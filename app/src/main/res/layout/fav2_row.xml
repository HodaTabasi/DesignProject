<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/report_layout_shap"
        android:orientation="vertical"
        android:padding="9dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/report_layout_shap"
            android:gravity="center"
            android:padding="5dp"
            android:text="حسام اليماني"
            android:textColor="@color/textGray"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/report_layout_shap"
                android:drawableRight="@drawable/ic_like_small"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="150"
                android:textColor="@color/textGray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/report_layout_shap"
                android:drawableRight="@drawable/ic_show_small"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="1200"
                android:textColor="@color/textGray"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_specialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/report_layout_shap"
            android:gravity="center"
            android:padding="5dp"
            android:text="تصميم معماري"
            android:textColor="@color/gray1"
            android:textSize="8sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <TextView
                android:id="@+id/tv_addProject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="2"
                android:background="@drawable/blue_shape"
                android:gravity="center"
                android:padding="4dp"
                android:text="أضف عمل مشابه"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/tv_fav"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@drawable/report_layout_shap"
                android:padding="3dp"
                android:src="@drawable/ic_favorite_small" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>