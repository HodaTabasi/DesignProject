<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img"
        android:layout_width="160dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/p1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp" />

    <TextView
        android:id="@+id/project_title"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/img"
        android:layout_toRightOf="@+id/img"
        android:text="هوية بصرية لشركة تهتم بمجال النظر"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/num_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_title"
        android:layout_toLeftOf="@+id/img"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/report_layout_shap"
        android:drawableEnd="@drawable/ic_visibility_black_24dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_visibility_black_24dp"
        android:padding="5dp"
        android:text="1200 "
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/img" />

    <TextView
        android:id="@+id/num_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/report_layout_shap"
        android:drawableEnd="@drawable/ic_thumb_up_black_24dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_thumb_up_black_24dp"
        android:padding="5dp"
        android:text="150 "
        android:textColor="@android:color/black"
        android:layout_below="@+id/project_title"
        android:layout_toLeftOf="@+id/num_seen"
        android:textSize="15dp"
        android:layout_toStartOf="@+id/num_seen" />

    <TextView
        android:id="@+id/update_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/title_shape"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="تعديل "
        android:textColor="@android:color/white"
        android:layout_below="@+id/num_seen"
        android:layout_toLeftOf="@+id/img"
        android:textSize="15dp"
        android:layout_toStartOf="@+id/img" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/red_shap"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:text="حذف  "
        android:textColor="@android:color/white"
        android:layout_below="@+id/num_like"
        android:layout_toLeftOf="@+id/update_work"
        android:textSize="15dp"
        android:layout_toStartOf="@+id/update_work" />

    <view
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/img"
        android:layout_marginTop="16dp"/>


</RelativeLayout>