<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/img1" />

    <TextView
        android:id="@+id/project_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/update_work"
        android:layout_alignTop="@+id/img"
        android:text="هوية بصرية لشركة تهتم بمجال النظر"
        android:textColor="@color/textGray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/num_seen"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_title"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@+id/img"
        android:layout_toStartOf="@+id/img"
        android:background="@drawable/report_layout_shap"
        android:drawableEnd="@drawable/ic_visibility_black_24dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_visibility_black_24dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/num_like"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/project_title"
        android:layout_marginTop="16dp"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@+id/num_seen"
        android:layout_toStartOf="@+id/num_seen"
        android:background="@drawable/report_layout_shap"
        android:drawableEnd="@drawable/ic_thumb_up_black_24dp"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/ic_thumb_up_black_24dp"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/update_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num_seen"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/img"
        android:layout_toStartOf="@+id/img"
        android:background="@drawable/blue_shape"
        android:paddingBottom="3dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="3dp"
        android:text="تعديل "
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/delete_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num_like"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/update_work"
        android:layout_toStartOf="@+id/update_work"
        android:background="@drawable/red_shap"
        android:paddingBottom="3dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="3dp"
        android:text="حذف  "
        android:textColor="@android:color/white"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/img"
        android:layout_marginTop="16dp"
        android:background="@color/gray" />


</RelativeLayout>