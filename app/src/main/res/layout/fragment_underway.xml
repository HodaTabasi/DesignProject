<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".UnderwayFragment"
    android:layout_height="wrap_content">

<LinearLayout
    android:id="@+id/ww"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentTop="true"
    android:layout_margin="8dp"
    android:background="@drawable/report_layout_shap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_shape"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1200 ريال سعودى"
                    android:textSize="15dp"
                    android:layout_weight="1.3"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>

                <view
                    android:layout_width="1.5dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="الميزانية"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:layout_weight="0.7"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_shape"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1200 ريال سعودى"
                    android:textSize="15dp"
                    android:layout_weight="1.3"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>

                <view
                    android:layout_width="1.5dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="الميزانية"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:layout_weight="0.7"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_shape"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1200 ريال سعودى"
                    android:textSize="15dp"
                    android:layout_weight="1.3"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>

                <view
                    android:layout_width="1.5dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="الميزانية"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:layout_weight="0.7"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_shape"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1200 ريال سعودى"
                    android:textSize="15dp"
                    android:layout_weight="1.3"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>

                <view
                    android:layout_width="1.5dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="الميزانية"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:layout_weight="0.7"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/report_layout_shap">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:src="@drawable/p1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp" />



            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="حسام اليماني "
                android:layout_toLeftOf="@+id/profile_image1"
                android:layout_toStartOf="@+id/profile_image1"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="17dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مصمم"
                android:textColor="@android:color/black"
                android:background="@drawable/account_shape"
                android:layout_margin="5dp"
                android:layout_below="@+id/name"
                android:layout_toLeftOf="@+id/profile_image1"
                android:paddingLeft="8dp"
                android:paddingRight="8sp"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:paddingStart="8dp"
                android:paddingEnd="8sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/report_layout_shap">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:src="@drawable/p1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp" />



            <TextView
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="حسام اليماني "
                android:layout_toLeftOf="@+id/profile_image2"
                android:layout_toStartOf="@+id/profile_image2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textSize="17dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مصمم"
                android:textColor="@android:color/black"
                android:background="@drawable/account_shape"
                android:layout_margin="5dp"
                android:layout_below="@+id/name1"
                android:layout_toLeftOf="@+id/profile_image2"
                android:paddingLeft="8dp"
                android:paddingRight="8sp"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:paddingStart="8dp"
                android:paddingEnd="8sp" />

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/ww"
        android:layout_above="@+id/ff"/>

    <LinearLayout
        android:id="@+id/ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ic_more_horiz_black_24dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ligtht_gray_shap"
            android:layout_weight="4"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_height="match_parent"
            android:src="@drawable/send"/>


    </LinearLayout>


</RelativeLayout>