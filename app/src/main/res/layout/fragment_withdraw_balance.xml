<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Fragments.WithdrawBalanceFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_blue_shap"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/title_shape"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="11dp"
            android:paddingTop="5dp"
            android:text="سحب رصيد"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <LinearLayout
            android:id="@+id/ww1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title1"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/white_shap"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_shap"
                    android:textColor="@android:color/black" />

                <view
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.7"
                    android:text="اسم صاحب الحساب"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <view
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_shap"
                    android:textColor="@android:color/black" />

                <view
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.7"
                    android:text="رقم الحساب"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <view
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_shap"
                    android:textColor="@android:color/black" />

                <view
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.7"
                    android:text="اسم البنك "
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <view
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/white_shap"
                    android:textColor="@android:color/black" />

                <view
                    android:layout_width="1dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="0.7"
                    android:text="المبلغ "
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/send_bank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ww1"
            android:layout_marginLeft="114dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/red_shap"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="11dp"
            android:paddingTop="5dp"
            android:text="الغاء "
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <Button
            android:id="@+id/cancl_bank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/send_bank1"
            android:layout_marginEnd="106dp"
            android:layout_marginRight="106dp"
            android:background="@drawable/title_shape"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="11dp"
            android:paddingTop="3dp"
            android:text="سحب "
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:layout_marginBottom="8dp"/>


    </RelativeLayout>

</LinearLayout>