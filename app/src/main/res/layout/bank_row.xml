<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layoutDirection="ltr">

    <TextView
        android:id="@+id/tv_bankName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bankName"
        android:textColor="@color/textGray"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_bankName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bankName"
        android:background="@drawable/report_layout_shap"
        android:gravity="right"
        android:padding="5dp"
        android:textColor="@color/gray"
        android:text="البنك العربي"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_bankNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bankName"
        android:layout_marginTop="5dp"
        android:text="@string/bankNum"
        android:textColor="@color/textGray"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_bankNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bankNum"
        android:background="@drawable/report_layout_shap"
        android:gravity="right"
        android:textColor="@color/gray"
        android:padding="5dp"
        android:textSize="12sp"
        android:text="55555555555" />

    <TextView
        android:id="@+id/tv_Num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bankNum"
        android:layout_marginTop="5dp"
        android:text="@string/EbanNum"
        android:textColor="@color/textGray"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/et_kNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Num"
        android:background="@drawable/report_layout_shap"
        android:gravity="right"
        android:textColor="@color/gray"
        android:padding="5dp"
        android:textSize="12sp"
        android:text="55555555555" />


</RelativeLayout>