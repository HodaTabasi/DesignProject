<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BusinessFairFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/report_layout_shap"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="start"
            android:text="هوية بصرية لشركة تهتم بمجال النظر"
            android:textAlignment="textStart"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/num_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="13dp"
                android:background="@drawable/report_layout_shap"
                android:drawableEnd="@drawable/ic_date_range_black_24dp"
                android:drawableRight="@drawable/ic_date_range_black_24dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="10/4/2018 "
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/num_seen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/num_date"
                android:background="@drawable/report_layout_shap"
                android:drawableEnd="@drawable/ic_visibility_black_24dp"
                android:drawableRight="@drawable/ic_visibility_black_24dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="1200 "
                android:textColor="@android:color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/num_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/num_seen"
                android:background="@drawable/report_layout_shap"
                android:drawableEnd="@drawable/ic_thumb_up_black_24dp"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/ic_thumb_up_black_24dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="150 "
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/update_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/num_like"
                android:background="@drawable/title_shape"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:text="تعديل "
                android:textColor="@android:color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/update_work"
                android:background="@drawable/red_shap"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:text="حذف  "
                android:textColor="@android:color/white"
                android:textSize="15dp" />
        </RelativeLayout>

        <view
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:text="تفاصيل" />
    </LinearLayout>

    <TextView
        android:id="@+id/project_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/num_date"
        android:layout_toStartOf="@+id/num_date"
        android:background="@drawable/report_layout_shap"
        android:drawableEnd="@drawable/link_symbol"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/link_symbol"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="3dp"
        android:text="رابط العمل "
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/report_layout_shap">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="8dp"
            android:src="@drawable/p1" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/img1"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/p1" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img1"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/img2"
            android:layout_toRightOf="@+id/img2"
            android:scaleType="fitXY"
            android:src="@drawable/p1" />
    </RelativeLayout>
</LinearLayout>