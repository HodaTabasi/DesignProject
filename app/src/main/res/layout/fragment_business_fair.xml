<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".Fragments.BusinessFairFragment">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="#09102D" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableRight="@drawable/gallary"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:text="معرض اعمالي"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_arrow" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/report_layout_shap"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:gravity="start"
                    android:text="هوية بصرية لشركة تهتم بمجال النظر"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_8sdp">

                    <TextView
                        android:id="@+id/delete_work"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_weight="0.7"
                        android:background="@drawable/red_shap"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="حذف"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/update_work"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_weight=".7"
                        android:background="@drawable/blue_shape"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="تعديل"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/num_like"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_weight=".8"
                        android:background="@drawable/report_layout_shap"
                        android:drawablePadding="@dimen/_8sdp"
                        android:drawableRight="@drawable/ic_thumb_up_black_24dp"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="150"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/num_seen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_weight=".8"
                        android:background="@drawable/report_layout_shap"
                        android:drawableRight="@drawable/ic_visibility_black_24dp"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="1200"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/num_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1.3"
                        android:background="@drawable/report_layout_shap"
                        android:drawableRight="@drawable/ic_date_range_black_24dp"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="10/4/2018"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tv_descr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    android:text="تفاصيل"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/project_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toLeftOf="@+id/num_date"
                android:layout_toStartOf="@+id/num_date"
                android:background="@drawable/report_layout_shap"
                android:drawableEnd="@drawable/link_symbol"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableRight="@drawable/link_symbol"
                android:gravity="center"
                android:paddingBottom="@dimen/_3sdp"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingTop="@dimen/_3sdp"
                android:text="رابط العمل"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_12sdp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/report_layout_shap">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:src="@drawable/img1" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/img1"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/img1"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>