<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".Fragments.BusinessFairFragment">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#09102D" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_gallary"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:text="معرض اعمالي"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:padding="16dp"
            android:src="@drawable/ic_arrow" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/report_layout_shap"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:gravity="start"
                    android:text="هوية بصرية لشركة تهتم بمجال النظر"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/delete_work"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.7"
                        android:background="@drawable/red_shap"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="حذف  "
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/update_work"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight=".7"
                        android:background="@drawable/blue_shape"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="تعديل "
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/num_like"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight=".8"
                        android:background="@drawable/report_layout_shap"
                        android:drawablePadding="8dp"
                        android:drawableRight="@drawable/ic_thumb_up_black_24dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="150 "
                        android:textColor="@android:color/black"

                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/num_seen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight=".8"
                        android:background="@drawable/report_layout_shap"
                        android:drawableRight="@drawable/ic_visibility_black_24dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="1200 "
                        android:textColor="@android:color/black"

                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/num_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1.3"
                        android:background="@drawable/report_layout_shap"
                        android:drawableRight="@drawable/ic_date_range_black_24dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="10/4/2018 "
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tv_descr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="تفاصيل"
                    android:textColor="@android:color/secondary_text_light"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/project_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/num_date"
                android:layout_toStartOf="@+id/num_date"
                android:background="@drawable/report_layout_shap"
                android:drawableEnd="@drawable/link_symbol"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/link_symbol"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="3dp"
                android:text="رابط العمل "
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/report_layout_shap">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/img1" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/img1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/img1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>