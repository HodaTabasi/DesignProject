<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".Fragments.SearchFragment">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#09102D" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_search"
            android:gravity="center"
            android:text="بحث"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_arrow" />
    </RelativeLayout>

    <EditText
        android:id="@+id/txt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/account_shape"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:drawableStart="@drawable/ic_search_black_24dp"
        android:hint="بحث عن مصمم"
        android:padding="5dp"
        android:textSize="14dp"
        android:textColorHint="@color/textGray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/motion_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="0.6"
            android:background="@drawable/account_shape"
            android:maxLines="1"
            android:padding="5dp"
            android:text="موشن"
            android:textColor="@color/textGray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/gh_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/account_shape"
            android:maxLines="1"
            android:padding="8dp"
            android:text="تصاميم جرافيكس"
            android:textColor="@color/textGray"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/wall_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/account_shape"
            android:maxLines="1"
            android:padding="5dp"
            android:text="رسم جداري"
            android:textColor="@color/textGray"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/arch_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/account_shape"
            android:maxLines="1"
            android:padding="5dp"
            android:text="تصميم معماري"
            android:textColor="@color/textGray"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/in_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/account_shape"
            android:maxLines="1"
            android:padding="5dp"
            android:text="تصميم داخلي"
            android:textColor="@color/textGray"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/account_shape"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/ratting_designer"
            style="@style/customRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:stepSize="3"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="0.5"
            android:padding="5dp"
            android:text="التقييم"
            android:textColor="@color/textGray"
            android:textSize="14dp" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/res_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp" />

</LinearLayout>