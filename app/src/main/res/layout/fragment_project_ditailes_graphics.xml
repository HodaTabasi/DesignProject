<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectDitailesGraphicsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/title_shape"
            android:gravity="center">

            <TextView
                android:id="@+id/name_graphics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="تصاميم الجرافيكس"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/name_graphics"
                android:layout_toRightOf="@+id/name_graphics"
                android:src="@drawable/graphique"
                android:tint="@android:color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/gh_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:gravity="center"
            android:padding="3dp"
            android:text="تصميم هوية بصرية - تصميم شعار"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/project_name_gh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:gravity="center"
            android:padding="3dp"
            android:text="اسم المشروع"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/about_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:gravity="center"
            android:padding="3dp"
            android:text="عن النشاط "
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="start"
            android:text="ارفع صورة لتصاميم اعجبتك"
            android:textAlignment="textStart"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/gh_upload_image_like"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/account_shape"
            android:padding="16dp"
            android:src="@drawable/add" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/account_shape"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ابتكار"
                    android:id="@+id/innovation"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>

                <view
                    android:layout_width="1.5dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="تطوير"
                    android:id="@+id/develop"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>

                <view
                    android:layout_width="1.5dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="طلب تصميم"
                    android:textSize="15dp"
                    android:layout_weight="1.5"
                    android:id="@+id/ask_for_design"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/account_shape"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="لا"
                    android:textSize="15dp"
                    android:layout_weight="0.5"
                    android:id="@+id/no"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>

                <view
                    android:layout_width="1.5dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="نعم"
                    android:textSize="15dp"
                    android:layout_weight="0.7"
                    android:id="@+id/yes"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>

                <view
                    android:layout_width="1.5dp"
                    android:layout_height="30dp"
                    />
                <TextView
                    android:id="@+id/new_project"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="المشروع جديد"
                    android:textSize="15dp"
                    android:layout_weight="1.2"
                    android:padding="5dp"
                    android:textColor="@android:color/black"/>


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:gravity="center"
            android:padding="3dp"
            android:id="@+id/gh_balance"
            android:text="الميزانية"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:gravity="center"
            android:padding="3dp"
            android:id="@+id/project_deitails_gh"
            android:text="تفاصيل عن المشروع"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:drawableEnd="@drawable/upload"
            android:id="@+id/gh_attachment"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/upload"
            android:padding="8dp"
            android:text="المرفقات"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:id="@+id/send_gh"
            android:background="@drawable/title_shape"
            android:text="ارسل الطلب"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>