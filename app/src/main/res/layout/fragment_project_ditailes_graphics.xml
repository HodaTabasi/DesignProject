<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".ProjectDitailesGraphicsFragment">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#09102D" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="15dp"
            android:drawableRight="@drawable/ic_add_black"

            android:gravity="center"
            android:text="اضف مشروع"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_arrow" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/title_shape"
                android:gravity="center">

                <TextView
                    android:id="@+id/name_graphics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="تصاميم الجرافيكس"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/name_graphics"
                    android:layout_toRightOf="@+id/name_graphics"
                    android:src="@drawable/graphique"
                    android:tint="@android:color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/gh_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/account_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="تصميم هوية بصرية - تصميم شعار"
                android:textColor="@color/textGray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/project_name_gh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/account_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="اسم المشروع"
                android:textColor="@color/textGray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/about_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/account_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="عن النشاط "
                android:textColor="@color/textGray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:gravity="start"
                android:text="ارفع صورة لتصاميم اعجبتك"
                android:textAlignment="textStart"
                android:textColor="@color/gray1"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/gh_upload_image_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/account_shape"
                android:padding="8dp"
                android:src="@drawable/add" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/account_shape">

                    <TextView
                        android:id="@+id/innovation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="ابتكار"
                        android:textColor="@color/textGray"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_icon" />

                    <TextView
                        android:id="@+id/develop"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="تطوير"
                        android:textColor="@color/textGray"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_icon" />

                    <TextView
                        android:id="@+id/ask_for_design"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:padding="5dp"
                        android:text="طلب تصميم"
                        android:textColor="@color/textGray"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/account_shape">

                    <TextView
                        android:id="@+id/no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="5dp"
                        android:text="لا"
                        android:textColor="@color/textGray"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="30dp"
                        android:background="@color/gray_icon" />

                    <TextView
                        android:id="@+id/yes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:padding="5dp"
                        android:text="نعم"
                        android:textColor="@color/textGray"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_icon" />

                    <TextView
                        android:id="@+id/new_project"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:padding="5dp"
                        android:text="المشروع جديد"
                        android:textColor="@color/textGray"
                        android:textSize="14sp" />


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/gh_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/account_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="الميزانية"
                android:textColor="@color/textGray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/project_deitails_gh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/account_shape"
                android:gravity="center"
                android:padding="3dp"
                android:text="تفاصيل عن المشروع"
                android:textColor="@color/textGray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/gh_attachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/account_shape"
                android:drawableEnd="@drawable/upload"
                android:drawablePadding="8dp"
                android:drawableRight="@drawable/upload"
                android:padding="8dp"
                android:text="المرفقات"
                android:textColor="@color/textGray"
                android:textSize="16sp" />

            <Button
                android:id="@+id/send_gh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/title_shape"
                android:text="ارسل الطلب"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>