<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/account_shape"

    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_margin="8dp"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/p1"
        android:layout_gravity="center"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" حسام اليماني"
        android:textColor="@android:color/black"
        android:background="@drawable/account_shape"
        android:paddingLeft="8dp"
        android:paddingRight="8sp"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:paddingStart="8dp"
        android:paddingEnd="8sp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:stepSize="3"
        style="@style/customRatingBar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مصمم معماري"
        android:textColor="@android:color/black"
        android:background="@drawable/account_shape"
        android:paddingLeft="8dp"
        android:paddingRight="8sp"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:paddingStart="8dp"
        android:paddingEnd="8sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chooses_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اختارني للعمل"
            android:padding="5dp"
            android:layout_margin="8dp"
            android:textColor="@android:color/white"
            android:background="@drawable/title_shape"
            android:textSize="14dp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="مفضلة"
            android:drawableEnd="@drawable/ic_favorite_black_24dp"
            android:layout_toEndOf="@+id/chooses_me"
            android:textColor="@android:color/white"
            android:background="@drawable/title_shape"
            android:layout_margin="8dp"
            android:textSize="14sp"
            android:drawableRight="@drawable/ic_favorite_black_24dp"
            android:layout_toRightOf="@+id/chooses_me" />




    </RelativeLayout>



</LinearLayout>