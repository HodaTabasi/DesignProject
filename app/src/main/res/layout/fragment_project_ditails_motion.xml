<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectDitailsMotionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/title_shape"
            android:gravity="center">

            <TextView
                android:id="@+id/name_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="تصاميم الموشن"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/name_m"
                android:layout_toRightOf="@+id/name_m"
                android:src="@drawable/motion"
                android:tint="@android:color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/motion_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:gravity="center"
            android:padding="3dp"
            android:text="انفوجرافيك - تصميم فيديو"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:gravity="center"
            android:padding="3dp"
            android:text="اسم المشروع"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/project_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:gravity="center"
            android:padding="3dp"
            android:text="مدة المشروع "
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/about_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:gravity="center"
            android:padding="3dp"
            android:text="عن النشاط والخدمات "
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="start"
            android:text="ارفع صورة لتصاميم اعجبتك"
            android:textAlignment="textStart"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/motion_like_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/account_shape"
            android:padding="16dp"
            android:src="@drawable/add" />

        <TextView
            android:id="@+id/motion_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:gravity="center"
            android:padding="3dp"
            android:text="الميزانية"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/project_detiails_motion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:gravity="center"
            android:padding="3dp"
            android:text="تفاصيل عن المشروع"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/attachment_motion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/account_shape"
            android:drawableEnd="@drawable/upload"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/upload"
            android:padding="8dp"
            android:text="المرفقات"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <Button
            android:id="@+id/send_motion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/title_shape"
            android:text="ارسل الطلب"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>