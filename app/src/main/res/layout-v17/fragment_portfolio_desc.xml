<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".Fragments.PortfolioDescFragment">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="#09102D" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableEnd="@drawable/ic_portfolio"
            android:gravity="center"
            android:text="@string/portfolio"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_arrow" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/report_layout_shap"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="تصميم معماري لفيلا واجهة خارجية"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/_12sdp" />


                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />

                    <TextView
                        android:id="@+id/tv_like"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="2"
                        android:background="@drawable/report_layout_shap"
                        android:drawablePadding="5dp"
                        android:drawableEnd="@drawable/ic_like_small"
                        android:gravity="center"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="150"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/tv_shows"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="2"
                        android:background="@drawable/report_layout_shap"
                        android:drawablePadding="5dp"
                        android:drawableEnd="@drawable/ic_show_small"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="1200"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/tv_calender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.5"
                        android:background="@drawable/report_layout_shap"
                        android:drawablePadding="5dp"
                        android:drawableEnd="@drawable/ic_calender2"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="10/4/2019"
                        android:textColor="@color/gray1"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:text="واجهة فيلا بتصميم جميلومودرن وتم تنفيذه بالشكل الاحترافي"
                    android:textColor="@color/textGray"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ilike_it"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:background="@drawable/report_layout_shap"
                    android:drawableEnd="@drawable/ic_like_small"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="أعجبني"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/tv_link"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:background="@drawable/report_layout_shap"
                    android:drawableEnd="@drawable/ic_link_small"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="رابط العمل"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/tv_addSimlilarWork"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:background="@drawable/report_layout_shap"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="أضف عمل مشابه"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tv_add_to_fav"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/report_layout_shap"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="أضف للمفضلة"
                    android:textColor="@color/gray1"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/report_layout_shap"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="8dp"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="10dp"
                        android:src="@mipmap/ic_launcher" />

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:src="@mipmap/ic_launcher" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>