<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    tools:context=".Fragments.UnderwayFragment">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="#09102D" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableEnd="@drawable/ic_myprojects_toolbar"
            android:gravity="center"
            android:text="عروضي ومشاريعي"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_arrow" />

        <ImageView
            android:id="@+id/ic_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:padding="8dp"
            android:src="@drawable/ic_dots" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ww"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/report_layout_shap"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/report_layout_shap"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/project_start_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="29/08/2017"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_8sdp" />

                <View
                    android:layout_width="1.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:text="تاريخ المشروع"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_8sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/account_shape">

                    <TextView
                        android:id="@+id/project_money"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="1200 ريال سعودى"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_8sdp" />

                    <View
                        android:layout_width="1.2dp"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="الميزانية"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_8sdp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/account_shape"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/project_end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="29/08/2017"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_8sdp" />

                <View
                    android:layout_width="1.2dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="موعد التسليم"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_8sdp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/account_shape">

                    <TextView
                        android:id="@+id/project_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="50 ايام"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_8sdp" />

                    <View
                        android:layout_width="1.2dp"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="مدة التنفيذ"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_8sdp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/report_layout_shap">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image1"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="13dp"
                    android:src="@drawable/img1" />


                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@+id/profile_image1"
                    android:gravity="center_horizontal"
                    android:text="حسام اليماني "
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/its_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_toStartOf="@+id/profile_image1"
                    android:background="@drawable/account_shape"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingEnd="8sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8sp"
                    android:paddingStart="8dp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="المصمم"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_8sdp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/report_layout_shap">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_marginEnd="13dp"
                    android:src="@drawable/img1" />


                <TextView
                    android:id="@+id/name1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@+id/profile_image2"
                    android:gravity="center_horizontal"
                    android:text="حسام اليماني "
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/its_type1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name1"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_toStartOf="@+id/profile_image2"
                    android:background="@drawable/account_shape"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingEnd="8sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8sp"
                    android:paddingStart="8dp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="صاحب مشروع"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_8sdp" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swipe_container"
        android:layout_above="@+id/ff"
        android:layout_below="@+id/ww"
        android:layout_margin="@dimen/_8sdp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_more_horiz_black_24dp" />

        <EditText
            android:id="@+id/message_ex"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="end|center"
            android:padding="@dimen/_3sdp"
            android:background="@drawable/ligtht_gray_shap"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/send_messg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/send" />
    </LinearLayout>


</RelativeLayout>